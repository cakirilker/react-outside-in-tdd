{
  "env": {
    "browser": true,
    "es2020": true,
    "cypress/globals": true,
    "jest/globals": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "jest", "cypress"],
  "rules": {
    "prettier/prettier": ["warn", {}, {"usePrettierrc": true}],
    "indent": "off",
    "no-tabs": "warn",
    "no-mixed-spaces-and-tabs": "warn"
  }
}
